@model IEnumerable<BikeWatcher.Models.FavBikeStations>

@{
    ViewData["Title"] = "Favorites";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Mes Favoris</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">IDFAV</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var favori in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => favori.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => favori.idFav)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
